<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0%;
            padding: 0%;
            box-sizing: border-box;
        }
        html,
        body{
            height: 100%;
            width: 100%;
            padding: .5vmax;
        }
        
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <form action="/updated" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" disabled value="<%=user.email %>"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Username</label>
            <input type="text" id="username" value="<%=user.username %>" name="username" class="form-control" id="exampleInputPassword1">
          </div>
       
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">contact</label>
            <input name="contact" value="<%=user.contact %>" type="text" class="form-control" id="exampleInputPassword1">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Age</label>
            <input name="age" value="<%=user.age %>" type="text" class="form-control" id="exampleInputPassword1">
          </div>
    
        <button type="submit" class="btn btn-warning">update your profile</button>
      </form>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.0/axios.min.js" integrity="sha512-aoTNnqZcT8B4AmeCFmiSnDlc4Nj/KPaZyB5G7JnOnUEkdNpCZs1LCankiYi01sLTyWy+m2P+W4XM+BuQ3Q4/Dg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <script>
             var username = document.querySelector("#username")
             username.addEventListener("input",function(e){
              console.log("chlo");
              if(username.value.length > 0){
                axios.get(`/check/${username.value}`).then((data)=>{
                  console.log(data.data);
                if(data.data){
                  username.style.backgroundColor = "red"
                  
                } else { 
                  username.style.backgroundColor = "green"

                }
              })
              }
             })
      </script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>